<%- include ./partial/header.ejs %>
<%- include ./partial/nav.ejs %>

  <div class="basic-info">
    <div id='editable-profile'>
      <div>Name: <span id="full-name"><%= user.full_name %></span></div>
      <div>Current City: <span id="city"><%= user.current_city %></span> </div>
    </div>
    <div>Date Joined: <%= signupDate %></div>
    <% if (ownPage){ %>
      <button type="submit" id="edit-save">Edit Profile</button>
      <% } %>
  </div>
  <div class="post-info">
    <% posts.forEach((post) => { %>
      <div id=<%= post.id %>>
        <a href='/posts/<%= post.id %>?profile=<%= post.author_id %>'><%= post.title %></a>
        <%= post.city_id %>
        <%= post.content.substring(0, 1000) %>
      </div>
    <% }) %>
  </div>

<%- include ./partial/footer.ejs %>
